@model IEnumerable<Product>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>
        <div class="col-6 text-right">
            <a  asp-action="Upsert" class="btn btn-primary">
                <i class="fas fa-plus-square"></i> &nbsp; Create New Product
            </a>
        </div>
    </div>

    <br />    <br />

   
        <table class="table table-bordered table-striped " style="width: 100%">
            <thead>
                <tr>
                    <th>
                        Products
                    </th>
                    <th>Price</th>
                    <th>Category</th>
                    <th>App Type</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>

                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="30%">@obj.ProductName</td>
                        <td width="20%">@obj.ProductPrice</td>
                        <td width="20%">@obj.Category.CategoryName</td>
                        <td width="20%">@obj.AppType.AppName</td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a  asp-route-Id="@obj.ProductId" asp-action="Upsert" class="btn btn-primary mx-1">
                                    <i class="far fa-edit"></i> &nbsp; Edit
                                </a>
                                <a  asp-route-Id="@obj.ProductId" asp-action="Delete" class="btn btn-danger mx-1">
                                    <i class="far fa-trash-alt"></i> &nbsp; Delete

                                </a>

                            </div>
                        </td>
                    </tr>
                }





            </tbody>
        </table>
    
    @*else
    {
        <p>No Product Exists</p>

    }*@




</div>